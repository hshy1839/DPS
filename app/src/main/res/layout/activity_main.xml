<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#ffffff">

            <!-- 좌측 DPS 텍스트 -->
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DPS"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="left|center" />

            <!-- 로그인 버튼 -->
            <ImageView
                android:id="@+id/loginButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:gravity="right|center"
                android:src="@drawable/baseline_account_circle_24" />

            <!-- 오른쪽 메뉴 버튼 -->
            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:gravity="right|center"
                android:src="@drawable/menu"/>
        </LinearLayout>

        <!-- 상단 이미지 및 텍스트 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_oldman"/>

            <TextView
                android:id="@+id/firstTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DPS와"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/linebd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/secondTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 경험을 해보세요"
                android:fontFamily="@font/linerg"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="230dp"/>
        </RelativeLayout>

        <!-- 아이콘 및 텍스트 버튼들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <!-- Heartrate 버튼 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/heartrate_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#ffffff"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/heartrate_icon"
                    android:layout_gravity="top|center"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_gravity="top|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HeartRate"
                    android:fontFamily="@font/linebd"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
            </androidx.cardview.widget.CardView>

            <!-- Sleep 버튼 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sleep_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#ffffff"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sleep_icon"
                    android:layout_gravity="top|center"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_gravity="top|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep"
                    android:fontFamily="@font/linebd"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Workout 및 Heartrate 버튼 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <!-- Workout 버튼 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/workout_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#ffffff"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/running_icon"
                    android:layout_gravity="top|center"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_gravity="top|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linebd"
                    android:text="Workout"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
            </androidx.cardview.widget.CardView>

            <!-- Heartrate 버튼 (다시 사용) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/heartrate_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#ffffff"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_gravity="center"
                tools:ignore="DuplicateIds">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/heartrate_icon"
                    android:layout_gravity="top|center"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_gravity="top|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linebd"
                    android:text="HeartRate"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <!-- 운동 목록 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linebd"
                android:text="오늘의 운동 목록"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linerg"
                android:text="시작날짜 24년 1월 17일"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- 오른쪽에서 열리는 메뉴 -->
        <RelativeLayout
            android:id="@+id/right_drawer"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#ffffff">

            <!-- 메뉴 아이템들을 추가 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu 1"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu 2"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu 3"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu 4"
                android:padding="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
