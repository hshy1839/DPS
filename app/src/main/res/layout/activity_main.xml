<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity.MainActivity">

    <!-- ScrollView 추가 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#ffffff">

            <!-- 좌측 DPS 텍스트 -->
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aging In Place"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="left|center" />

            <!-- 로그인 버튼 -->
            <ImageView
                android:id="@+id/loginButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:gravity="right|center"
                android:src="@drawable/baseline_account_circle_24" />

            <!-- 오른쪽 메뉴 버튼 -->
            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:gravity="right|center"
                android:src="@drawable/menu"/>
        </LinearLayout>

        <!-- 상단 이미지 및 텍스트 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:background="#5271FE"/>

            <TextView
                android:id="@+id/firstTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aging In Place와"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/linebd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/secondTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 경험을 해보세요"
                android:fontFamily="@font/linerg"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="230dp"/>
        </RelativeLayout>

        <!-- 아이콘 및 텍스트 버튼들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <!-- Heartrate 버튼 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/heartrate_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#ffffff"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_heartrate"
                    android:layout_gravity="top|center"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_gravity="top|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HeartRate"
                    android:fontFamily="@font/linebd"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
            </androidx.cardview.widget.CardView>

            <!-- Sleep 버튼 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sleep_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#ffffff"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_sleep"
                    android:layout_gravity="top|center"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_gravity="top|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep"
                    android:fontFamily="@font/linebd"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Workout 및 Heartrate 버튼 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <!-- Workout 버튼 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/workout_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#ffffff"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_running"
                    android:layout_gravity="top|center"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_gravity="top|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linebd"
                    android:text="Workout"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
            </androidx.cardview.widget.CardView>

            <!-- 칼로리 버튼 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/calorie_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:strokeColor="#000000"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_calories" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/linebd"
                    android:text="Calorie"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <!-- 운동 목록 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linebd"
                android:text="Aging In Place"
                android:textSize="20sp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linerg"
                android:text="시작날짜 24년 1월 17일"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:background="@color/white"
        android:id="@+id/nav_view"
        app:itemTextColor="@color/black"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>

